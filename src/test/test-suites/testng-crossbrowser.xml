<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="CrossBrowserSuite">
    <test name="Firefox">
        <parameter name="browser" value="firefox"></parameter>
        <classes>
            <class name="com.browserCompatibility.InvokeBrowserDynamically">
                <methods>
                    <include name="verifyHomePageOnBrowsers"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Chrome">
        <parameter name="browser" value="chrome"></parameter>
        <classes>
            <class name="com.browserCompatibility.InvokeBrowserDynamically">
                <methods>
                    <include name="verifyHomePageOnBrowsers"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="Edge">
        <parameter name="browser" value="edge"></parameter>
        <classes>
            <class name="com.browserCompatibility.InvokeBrowserDynamically">
                <methods>
                    <include name="verifyHomePageOnBrowsers"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>


